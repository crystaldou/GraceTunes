%tr
  %td= song.title
  %td= song.artist
  %td= song.album
  %td
    - @tags[song].each do |tag|
      =button_tag tag, :style => "cursor: text"
  %td= link_to "View", song_path(song), :id => song.title
  %td= link_to "Edit", edit_song_path(song)
  
  - if not current_user.nil?
    %td
      = form_tag songs_view_path, :method => :post, :id => song.id do
        = text_field_tag :song_id, song.id, :style => 'display: none'
        = select_tag :playlist, options_for_select(User.find(current_user.id).playlists.map {|playlist| "#{playlist.name}, #{playlist.id}"} || ["none"], params[:playlist]), :class => 'selectpicker', :style => "width: inherit"
        = submit_tag "Add", :class => 'btn btn-primary btn-lg', :style => 'margin-bottom: 10px', :id => "#{song.title}_button"
  