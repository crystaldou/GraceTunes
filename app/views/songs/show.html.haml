-# in app/views/songs/show.html.haml
- if flash[:notice]
  #notice.message{:class=> 'alert'}= flash[:notice]
  
%h4 Details about #{@song.title}

%ul#details
  %li
    Artist:
    = @song.artist
  %li
    Album:
    = @song.album

  %li 
    Tags:
    = @song.tags

%h5 Download Link: N/A

= link_to 'Edit', edit_song_path(@song)
= link_to 'Back to search bar', songs_path
= button_to 'Delete', song_path(@song), :method => :delete, :confirm => 'Are you sure?', :class=>'btn btn-danger'
