-# in app/views/songs/show.html.haml
- if flash[:notice]
  #notice.message= flash[:notice]
  
%h2 Details about #{@song.title}

%ul#details
  %li
    Artist:
    = @song.artist
  %li
    Album:
    = @song.album

%h3 Tags:

%p#tags= @song.tags

%h4 To download: NOT AVAILABLE

= link_to 'Edit', edit_song_path(@song)
= button_to 'Delete', song_path(@song), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to search bar', songs_path